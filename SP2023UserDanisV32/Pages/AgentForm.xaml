<Page x:Class="SP2023UserDanisV32.Pages.AgentForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SP2023UserDanisV32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Агент">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Background="Red" Content="Удалить" Margin="0 0 5 0" VerticalAlignment="Center" Name="DeleteBtn" Click="DeleteBtn_Click"/>
            <Button Content="Сохранить" Margin="0 0 5 0" VerticalAlignment="Center" Name="SaveBtn" Click="SaveBtn_Click"/>
            <Button Content="Назад" BorderBrush="{StaticResource Accent}" Background="Transparent" Margin="0 0 5 0" VerticalAlignment="Center" Name="BackBtn" Click="BackBtn_Click" BorderThickness="1"/>
            <TextBlock Text="{Binding ID, StringFormat=Агент ID \{0\}}" FontSize="36" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1">
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Наименование" Grid.Row="0" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="Тип агента" Grid.Row="1" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="Приоритет" Grid.Row="2" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="Логотип" Grid.Row="3" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="Адрес" Grid.Row="4" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="ИНН" Grid.Row="5" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="КПП" Grid.Row="6" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="Имя директора" Grid.Row="7" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="Телефон" Grid.Row="8" HorizontalAlignment="Right" Margin="0 0 20 0"/>
                <TextBlock Text="Email компании" Grid.Row="9" HorizontalAlignment="Right" Margin="0 0 20 0"/>

                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Title}" Margin="0 5"/>
                <ComboBox Grid.Column="1" Grid.Row="1" Width="300" HorizontalAlignment="Left" Margin="0 5" Name="AgentTypeDropdown" SelectedValue="{Binding AgentTypeID}" SelectedValuePath="ID" DisplayMemberPath="Title"/>
                <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Priority}" Margin="0 5"/>
                <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" Margin="0 5">
                    <Button Content="Загрузить лого" Margin="5 0" Click="LogoButton_Click"/>
                    <TextBlock Text="{Binding Logo}" Margin="5 0" Width="300"/>
                </StackPanel>
                <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Address}" Margin="0 5"/>
                <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding INN}" Margin="0 5"/>
                <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding KPP}" Margin="0 5"/>
                <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding DirectorName}" Margin="0 5"/>
                <TextBox Grid.Column="1" Grid.Row="8" Text="{Binding Phone}" Margin="0 5"/>
                <TextBox Grid.Column="1" Grid.Row="9" Text="{Binding Email}" Margin="0 5"/>

            </Grid>
        </ScrollViewer>

        <StackPanel Orientation="Vertical" Grid.Row="2">

            <!--<Button Content="Добавить продажу" Click="AddSale_Click" Margin="5" HorizontalAlignment="Left"/>-->

            <DataGrid Grid.Row="2" Name="ProductSaleDG" ItemsSource="{Binding ProductSale}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="True" 
                  CanUserDeleteRows="True" 
                  IsReadOnly="False"
                  IsManipulationEnabled="True"
                  AddingNewItem="ProductSaleDG_AddingNewItem"
                  RowEditEnding="ProductSaleDG_RowEditEnding">
                <DataGrid.Columns>
                    <DataGridTextColumn IsReadOnly="True" Binding="{Binding ID}" Header="ID"/>
                    <DataGridComboBoxColumn SelectedItemBinding="{Binding Product}" x:Name="ProductsDropDown" DisplayMemberPath="Title" SelectedValueBinding="{Binding ProductID}" SelectedValuePath="ID" Header="Продукт"/>
                    <DataGridComboBoxColumn SelectedItemBinding="{Binding Agent}" x:Name="AgentsDropDown" DisplayMemberPath="Title" SelectedValueBinding="{Binding AgentID}" SelectedValuePath="ID" Header="Агент"/>
                    <DataGridTemplateColumn Header="Дата продажи">
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding SaleDate, StringFormat=\{\}\{0:dd.MM.yyyy\}\}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding SaleDate, StringFormat={}{0:dd.MM.yyyy}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Количество" Binding="{Binding ProductCount, UpdateSourceTrigger=PropertyChanged}"/>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Удалить" Click="DeleteSale_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
