<Page x:Class="SP2023UserDanisV32.Pages.AgentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SP2023UserDanisV32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Приятный Шелест: Агенты">

    <Grid Background="{StaticResource Secondary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="SearchInput" TextChanged="SearchInput_TextChanged" Margin="10 10 5 10" Text="{Binding SearchText, BindsDirectlyToSource=True}" VerticalContentAlignment="Center"/>
            <ComboBox Name="SortDropdown" SelectionChanged="SortDropdown_SelectionChanged" Margin="5 10 5 10" Grid.Column="1" ItemsSource="{Binding SortingItems}" VerticalContentAlignment="Center"/>
            <ComboBox Name="FilterDropdown" SelectionChanged="FilterDropdown_SelectionChanged" Margin="5 10 10 10" Grid.Column="2" SelectedItem="{Binding SearchType}" VerticalContentAlignment="Center" ItemsSource="{Binding FilterItems}" DisplayMemberPath="Title" SelectedValuePath="ID"/>
        </Grid>

        <ListView Name="AgentsLV" ItemsSource="{Binding Agents}" Grid.Row="1" Background="Transparent" SelectionMode="Multiple" SelectionChanged="AgentsLV_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border HorizontalAlignment="Stretch" Background="Transparent" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}}" Padding="10" Height="200">
                        <Border>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentDiscount}" Value="24">
                                            <DataTrigger.Setters>
                                                <Setter Property="Background" Value="LightGreen"/>
                                            </DataTrigger.Setters>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="240"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding PhotoSource}" Margin="5"/>
                            <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1">
                                <TextBlock Text="{Binding TitleText}" FontSize="36"/>
                                <TextBlock Text="{Binding Path=SellsInYear, StringFormat=\{0\} продаж за год}"/>
                                <TextBlock Text="{Binding Phone}"/>
                                <TextBlock Text="{Binding CurrentPriority}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding CurrentDiscount, StringFormat=\{0\}%}" FontSize="36" Grid.Column="2" Margin="10" Foreground="{StaticResource Accent}"/>
                        </Grid>
                        </Border>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="2" Background="White">
            <Button Content="Изменить приоритет" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15 0 0 0" Name="PriorityButton" Click="PriorityButton_Click"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Height="60">
                <Button Name="PrevBtn" Click="PrevBtn_Click" Background="Transparent" BorderThickness="0" Padding="0" Content="{Binding Lt}" Foreground="{StaticResource Accent}" Width="40" Height="40"/>
                <StackPanel Orientation="Horizontal" Name="PaginationPanel">
                    
                </StackPanel>
                <Button Name="NextBtn" Click="NextBtn_Click" Background="Transparent" BorderThickness="0" Padding="0" Content="{Binding Gt}" Foreground="{StaticResource Accent}" Width="40" Height="40"/>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" VerticalAlignment="Center">
            <Button Background="{StaticResource Accent}" Content="Изменить объект" Margin="5 0 0 0" Name="EditBtn" Click="EditBtn_Click"/>
            <Button Background="{StaticResource Accent}" Content="Добавить" Margin="5 0 0 0" Name="AddBtn" Click="AddBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
